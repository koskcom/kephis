<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ui.Common.DashboardActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@color/md_green_900"
            android:orientation="horizontal">


            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewAddFarmInspection"
                android:layout_width="319dp"
                android:layout_height="@dimen/card_height"
                android:layout_weight=".5"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="@dimen/card_conner_radius"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="186dp"
                    android:layout_height="70dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="250dp"
                        android:layout_height="150dp"
                        android:padding="12dp"
                        android:layout_marginLeft="-0dp"
                        app:srcCompat="@drawable/ic_farm_ins" />

                </LinearLayout>

                <TextView
                    android:layout_width="153dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="15dp"
                    android:gravity="center"
                    android:text="Exporter Farm Inspection"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsze"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="10dp"
            android:background="@color/md_green_900"
            android:orientation="horizontal">


            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewAddProducerFarmInspection"
                android:layout_width="319dp"
                android:layout_height="@dimen/card_height"
                android:layout_weight=".5"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="@dimen/card_conner_radius"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="186dp"
                    android:layout_height="70dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="250dp"
                        android:layout_height="150dp"
                        android:padding="12dp"
                        app:srcCompat="@drawable/ic_facility" />

                </LinearLayout>

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="33dp"
                    android:layout_gravity="right"
                    android:layout_marginTop="18dp"
                    android:gravity="center"
                    android:lines="5"
                    android:text="Exporter Producer Inspection"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsze"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="10dp"
            android:background="@color/md_green_900"
            android:orientation="horizontal">


            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewAddConsignmentnspection"
                android:layout_width="319dp"
                android:layout_height="@dimen/card_height"
                android:layout_weight=".5"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="@dimen/card_conner_radius"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="186dp"
                    android:layout_height="70dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="250dp"
                        android:layout_height="150dp"
                        android:padding="12dp"
                        app:srcCompat="@drawable/ic_consignment" />

                </LinearLayout>

                <TextView
                    android:layout_width="151dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:lines="5"
                    android:text="Exporter Consignment Inspection"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsze"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="10dp"
            android:background="@color/md_green_900"
            android:orientation="horizontal">


            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewAddFacilityInspection"
                android:layout_width="319dp"
                android:layout_height="@dimen/card_height"
                android:layout_weight=".5"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="@dimen/card_conner_radius"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="186dp"
                    android:layout_height="70dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="250dp"
                        android:layout_height="150dp"
                        android:padding="12dp"
                        app:srcCompat="@drawable/ic_producer_insp" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="Exporter FacilityInspection"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsze"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>


        </LinearLayout>


    </LinearLayout>

</RelativeLayout>


