             </TextView>-->

        <!--  <ImageView
              android:layout_width="match_parent"
              android:layout_height="match_parent"

              android:layout_weight="60"
              android:src="@drawable/logo">

          </ImageView
      </LinearLayout>>-->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/horizontal_dashboard"

            android:layout_marginTop="60dp"
            android:layout_marginRight="@dimen/horizontal_dashboard"


            android:drawablePadding="@dimen/drawable_left"
            android:fontFamily="@font/sans_bold"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/normalPadding"
            android:paddingTop="@dimen/vertical_search"
            android:paddingRight="@dimen/normalPadding"
            android:paddingBottom="@dimen/vertical_search"


            android:text="@string/exporter_inpection"

            android:textAlignment="center"
            android:textColor="@color/black"

            android:textSize="20sp"
            tools:ignore="RtlCompat">

        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="60dp"
            android:background="@null">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:background="@null">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="80dp"
                    android:background="@color/grey_200"
                    android:orientation="vertical">

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/ll_firstcoureses"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/horizontal_dashboard"
                        android:layout_marginTop="@dimen/normalPadding"
                        android:layout_marginRight="@dimen/horizontal_dashboard"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <androidx.cardview.widget.CardView

                            android:id="@+id/cardViewAddFarmInspection"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"

                            android:layout_marginTop="@dimen/horizontal_card"
                            android:layout_marginEnd="@dimen/horizontal_card"
                            android:layout_marginRight="@dimen/horizontal_card"
                            android:layout_marginBottom="@dimen/horizontal_card"


                            android:layout_weight="1"
                            android:clickable="true"
                            android:focusable="true"

                            android:foreground="?attr/selectableItemBackground"


                            app:cardCornerRadius="@dimen/card_radius"
                            app:cardElevation="0dp"
                            app:cardPreventCornerOverlap="false">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/card_view_image"
                                    android:layout_width="match_parent"
                                    android:layout_height="120dp"
                                    android:layout_gravity="center"
                                    android:padding="24dp"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/ic_farm" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="@dimen/normalPadding"

                                    android:layout_marginTop="@dimen/top_text_card"

                                    android:layout_marginRight="@dimen/normalPadding"
                                    android:fontFamily="@font/bariol_bold"
                                    android:gravity="center"
                                    android:text="Farm Inspection"
                                    android:textAlignment="center"
                                    android:textColor="@color/darkTextColor"
                                    android:textSize="16sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="@dimen/normalPadding"

                                    android:layout_marginTop="@dimen/top_text_subtitle_card"
                                    android:layout_marginRight="@dimen/normalPadding"

                                    android:layout_marginBottom="@dimen/normalPadding"

                                    android:fontFamily="@font/bariol_bold"
                                    android:text="Exporter"
                                    android:textAlignment="center"
                                    android:textColor="@color/dashboard_subtitle"
                                    android:textSize="11sp" />


                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView

                            android:id="@+id/cardViewAddProducerFarmInspection"
                            android:layout_width="0dp"

                            android:layout_height="wrap_content"

                            android:layout_marginLeft="@dimen/horizontal_card"
                            android:layout_marginTop="@dimen/horizontal_card"
                            android:layout_marginBottom="@dimen/horizontal_card"

                            android:layout_weight="1"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackground"
                            app:cardCornerRadius="@dimen/card_radius"
                            app:cardElevation="@dimen/card_course_dashboard_elevation">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/img_card_height"
                                    android:padding="24dp"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/ic_producer_inspection_im" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="@dimen/normalPadding"

                                    android:layout_marginTop="@dimen/top_text_card"

                                    android:layout_marginRight="@dimen/normalPadding"
                                    android:fontFamily="@font/bariol_bold"
                                    android:gravity="center"

                                    android:text="Producer Inspection"
                                    android:textAlignment="center"
                                    android:textColor="@color/darkTextColor"
                                    android:textSize="15sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="@dimen/normalPadding"

                                    android:layout_marginTop="@dimen/top_text_subtitle_card"
                                    android:layout_marginRight="@dimen/normalPadding"

                                    android:layout_marginBottom="@dimen/normalPadding"
                                    android:fontFamily="@font/bariol_bold"
                                    android:text="Exporter"
                                    android:textAlignment="center"
                                    android:textColor="@color/dashboard_subtitle"
                                    android:textSize="11sp" />

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/consignm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/horizontal_dashboard"
                        android:layout_marginTop="@dimen/normalPadding"
                        android:layout_marginRight="@dimen/horizontal_dashboard"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal"
                        android:weightSum="2">


                        <androidx.cardview.widget.CardView

                            android:id="@+id/cardViewAddConsignmentnspection"
                            android:layout_width="0dp"

                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/horizontal_card"
                            android:layout_marginRight="@dimen/horizontal_card"
                            android:layout_marginBottom="@dimen/horizontal_card"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:focusable="true"

                            android:foreground="?attr/selectableItemBackground"


                            app:cardCornerRadius="@dimen/card_radius"
                            app:cardElevation="0dp"
                            app:cardPreventCornerOverlap="false">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <ImageView

                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/img_card_height"
                                    android:padding="24dp"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/ic_consignment_im" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="@dimen/normalPadding"

                                    android:layout_marginTop="@dimen/top_text_card"


                                    android:layout_marginRight="@dimen/normalPadding"
                                    android:fontFamily="@font/bariol_bold"
                                    android:text="Consig' Inspection"
                                    android:textAlignment="center"
                                    android:textColor="@color/darkTextColor"
                                    android:textSize="15sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="@dimen/normalPadding"

                                    android:layout_marginTop="@dimen/top_text_subtitle_card"
                                    android:layout_marginRight="@dimen/normalPadding"

                                    android:layout_marginBottom="@dimen/normalPadding"
                                    android:fontFamily="@font/bariol_bold"
                                    android:text="Exporter"
                                    android:textAlignment="center"
                                    android:textColor="@color/dashboard_subtitle"
                                    android:textSize="11sp" />


                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView

                            android:id="@+id/cardViewAddFacilityInspection"
                            android:layout_width="0dp"

                            android:layout_height="wrap_content"

                            android:layout_marginLeft="@dimen/horizontal_card"
                            android:layout_marginTop="@dimen/horizontal_card"
                            android:layout_marginBottom="@dimen/horizontal_card"


                            android:layout_weight="1"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackground"
                            app:cardCornerRadius="@dimen/card_radius"
                            app:cardElevation="@dimen/card_course_dashboard_elevation">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/img_card_height"
                                    android:padding="24dp"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/ic_depot" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="@dimen/normalPadding"

                                    android:layout_marginTop="@dimen/top_text_card"
                                    android:layout_marginRight="@dimen/normalPadding"
                                    android:fontFamily="@font/bariol_bold"

                                    android:text="Facility Inspection"
                                    android:textAlignment="center"
                                    android:textColor="@color/darkTextColor"
                                    android:textSize="16sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="@dimen/normalPadding"

                                    android:layout_marginTop="@dimen/top_text_subtitle_card"
                                    android:layout_marginRight="@dimen/normalPadding"

                                    android:layout_marginBottom="@dimen/normalPadding"
                                    android:fontFamily="@font/bariol_bold"
                                    android:text="Exporter"
                                    android:textAlignment="center"
                                    android:textColor="@color/dashboard_subtitle"
                                    android:textSize="11sp" />

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>

</androidx.core.widget.NestedScrollView>